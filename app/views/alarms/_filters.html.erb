<% form_tag({:action => 'filter_button'}, :id => "filters_form")  do %> 
<dl id="alarms-service-filters" style="display: none;">
  <dt>Attended by:</dt>
  <dd><%= select_tag "by_attendee", @filters['users'] %></dd>

  <dt>Service:</dt>
  <dd><%= select_tag "from_service", @filters['services'] %></dd>

  <dt>Service group:</dt>
  <dd><%= select_tag "service_group", @filters['service_groups'] %></dd>

  <dt>Time:</dt>
  <dd><%= text_field_tag "time" %> <%= select_tag "time_unit", @filters['time_unit'] %> ago</dd>

  <dt>Status:</dt>
  <dd><%= select_tag "status", @filters['status'] %></dd>

  <dt>Error:</dt>
  <dd><%= select_tag "service_state", @filters['service_state'] %></dd>
  
  <dt><%= submit_tag "Filter" %></dt>
  <dd>&nbsp;</dd>
   
  <% #Place to the right of the div %>
  <br/>
  <br/>
  
  <dt>Name:</dt>
  <dd><%= text_field_tag "name" %>
  <%= submit_tag "Save Filter" %></dd>
  
  <dt>Custom Filters:</dt>
  <dd><%= select_tag :custom_filters, @filters['custom_filters'] %>
	<%= submit_tag "Delete" %></dd>
	<%= observe_field :custom_filters, :url => { :action => :change_values }, :with => 'custom_filter' %>
	
</dl>
<% end %>
