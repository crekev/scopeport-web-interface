      <td><%= @conditions["cpu15"].blank? ? "None" : @conditions["cpu15"]["last_value"] %></td>
    </tr>
    
    <!-- fm -->
    <tr>
      <td>Free memory in kilobyte</td>
      <td><%= buildOperatorSelectTag "fm", @conditions["fm"]["condition"] %></td>
      <td><%= text_field "conditions", "fm", :value => @conditions["fm"]["condition"].blank? ? "" : h(@conditions["fm"]["condition"].value) %></td>
      <td><%= @conditions["fm"].blank? ? "None" : @conditions["fm"]["last_value"] %></td>
    </tr>
    
    <!-- fs -->
