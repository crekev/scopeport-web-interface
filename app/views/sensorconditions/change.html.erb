      <td><%= @conditions["fi"].blank? ? "None" : @conditions["fi"]["last_value"] %></td>
    </tr>

    <!-- of -->
    <tr>
      <td>Number of currently opened files</td>
      <td><%= buildOperatorSelectTag "of", @conditions["of"]["condition"] %></td>
      <td><%= text_field "conditions", "of", :value => @conditions["of"]["condition"].blank? ? "" : h(@conditions["of"]["condition"].value) %></td>
      <td><%= @conditions["of"].blank? ? "None" : @conditions["of"]["last_value"] %></td>
    </tr>
    
    <!-- rp -->
